@model MVCFoodApp.Models.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}

<style>
    .form-horizontal {
        max-width: 600px;
        margin: 5px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 3px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #ffffff;
        border: none;
    }

        .btn-warning:hover {
            background-color: #ffa000;
        }

    .text-danger {
        color: #dc3545;
    }

    .back-link {
        margin-top: 10px;
    }

        .back-link a {
            color: #007bff;
            text-decoration: none;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>
<br />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="margin-left:10px; margin-top:10px; margin-bottom:10px;">ADMİN GİRİŞ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-left:10px; margin-top:10px; margin-bottom:10px;">
            @Html.LabelFor(model => model.AdminMail, "E-MAİL", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdminMail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdminMail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:10px; margin-top:10px; margin-bottom:10px;">
            @Html.LabelFor(model => model.AdminPassword,"ŞİFRE", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left:10px; margin-top:10px; margin-bottom:10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GİRİŞ" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
